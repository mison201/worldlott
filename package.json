{
    "name": "somnia-lottery",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build": "hardhat compile",
        "clean": "hardhat clean",
        "testnode": "hardhat node",
        "deploy:local": "hardhat run scripts/01-openRound.ts --network hardhat",
        "openRound:somnia": "hardhat run scripts/01-openRound.ts --network somnia",
        "openRound:somnia:deploy": "FORCE_DEPLOY=1 hardhat run scripts/01-openRound.ts --network somnia",
        "openRound:local": "hardhat run scripts/01-openRound.ts --network hardhat",
        "commit": "hardhat run scripts/02-commitBuy.ts --network somnia",
        "reveal": "hardhat run scripts/03-reveal.ts --network somnia",
        "draw": "hardhat run scripts/04-requestDraw.ts --network somnia",
        "winning": "hardhat run scripts/05-getWinning.ts --network somnia",
        "claim": "hardhat run scripts/06-claim.ts --network somnia",
        "status": "hardhat run scripts/00-status.ts --network somnia",
        "set:price": "hardhat run scripts/07-setTicketPrice.ts --network somnia",
        "vrf:fee": "hardhat run scripts/08-getVrfFee.ts --network somnia",
        "pools:show": "hardhat run scripts/10-showPools.ts --network somnia",
        "round:finalize": "hardhat run scripts/11-finalizeAndWithdraw.ts --network somnia",
        "demo": "hardhat run scripts/12-demoFlow.ts --network hardhat",
        "demo:a": "TARGET_MATCHES=4 FORCE_WIN_FOR=A hardhat run scripts/12-demoFlow.ts --network hardhat",
        "demo:b": "TARGET_MATCHES=5 FORCE_WIN_FOR=B hardhat run scripts/12-demoFlow.ts --network hardhat"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^5.0.0",
        "dotenv": "^16.4.5",
        "hardhat": "^2.22.14",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "@chainlink/contracts": "^1.3.0"
    }
}